@page "/fetchdata"
@inject ApiService ApiService

<h3>Menu Items</h3>

@if (menuItems == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Name</th>
                <th>Price</th>
                <th>Toppings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in menuItems)
            {
                <tr>
                    <td>@item.Category</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@string.Join(", ", item.Topping ?? new List<string>())</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MenuItem> menuItems;

    protected override async Task OnInitializedAsync()
    {
        menuItems = await ApiService.GetMenuItemsAsync();
    }
}