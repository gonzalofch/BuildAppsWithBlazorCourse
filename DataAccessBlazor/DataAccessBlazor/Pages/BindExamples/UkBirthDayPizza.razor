@page "/ukbirthdaypizza"
<h1>Order a pizza for your birthday!</h1>

<p>
    Enter your birth date:
    <input @bind="birthdate" @bind:format="dd-MM-yyyy" /><!--Esto formatea un campo, lo podriamos utilizar con el String Localizer-->
</p>

@code {
    private DateTime birthdate { get; set; } = new(2000, 1, 1);
}